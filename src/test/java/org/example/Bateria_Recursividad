package org.example;

import javax.swing.*;
import java.util.Scanner;

public class Bateria_Recursividad {
    static Scanner entrada = new Scanner(System.in);

    static void main(String[] args) {

        menu();
        opciones(entrada.nextInt());




    }

    public static void menu(){

        System.out.println("*** Bateria de ejercicios sobre recursividad **+");
        System.out.println("Selecciona a continuación el modo que quieras ejcutar... ");
        System.out.println("1 - Digitos");
        System.out.println("2 - Potencias");
        System.out.println("3 - Del Revés");
        System.out.println("4 - Binario");
        System.out.println("5 -  A binario");
        System.out.println("6 - Orden alfabético(no esta hecho):");
        System.out.println("7 - Mostrar suma");
        System.out.println("Elige opcion: ");
    }

    public static void opciones( int opc){
        switch (opc){
            case 1:
                int res = entrada.nextInt();
                System.out.println(uno(res));
                minimenu();
                String opc2 = entrada.next();
                opcionesminimenu(opc2);

                break;
            case 2:
                System.out.println("Di el numero base:");
                int base = entrada.nextInt();
                System.out.println("Di el exponente: ");
                int exponente = entrada.nextInt();
                System.out.println(dos(base,exponente));
                minimenu();
                opc2 = entrada.next();
                opcionesminimenu(opc2);
                break;
            case 3:
                System.out.println("***Invertir***");
                System.out.println("[1] - Número");
                System.out.println("[2] - Cadena de texto");
                System.out.println("Elige tu opcion:");
                int opc3 = entrada.nextInt();
                if (opc3 == 1) {
                    System.out.println("Que numero quieres que salga al reves:");
                    int original = entrada.nextInt();
                    tres(original);
                } else if (opc3 ==2) {
                    System.out.println("Pon la cadena de texto:");
                    String frase = entrada.next();
                    char[] frase_char = frase.toCharArray();
                    tre_dos(frase_char.length-1,frase_char);
                }else {
                    System.out.println("Esa opcion no existe:");
                }

                minimenu();
                opc2 = entrada.next();
                opcionesminimenu(opc2);


                break;
            case 4:
                System.out.println("Dime el numero para comprobar si es binario:");
                int binario = entrada.nextInt();

                if (cuatro(binario) == true){
                    System.out.println("Si es binario");
                }else {
                    System.out.println("No es binario");
                }
                minimenu();
                opc2 = entrada.next();
                opcionesminimenu(opc2);

                break;
            case 5:
                System.out.println("Que numero quieres pasar a binario:");
                int num = entrada.nextInt();
                System.out.println(cinco(num,""));
                break;
            case 6:

                break;
            case 7:
                System.out.println("Hasta que numero quieres que sume:");
                int resp7 = entrada.nextInt();
                siete(resp7,1,0);

                minimenu();
                opc2 = entrada.next();
                opcionesminimenu(opc2);
                break;
            default:
                System.out.println("Esa opcion no existe:");
                System.out.println("");
                minimenu();
                opc2 = entrada.next();
                opcionesminimenu(opc2);

                break;

        }
    }

    public static void minimenu(){
        System.out.println("Elige una opcion: ");
        System.out.println("[M] - Volver al menu principal");
        System.out.println("[X] - Salir");
    }
    public static void opcionesminimenu(String opc){
        if (opc.toLowerCase().equals("x")){
            return;
        }else{
            menu();
            int res = entrada.nextInt();
            opciones(res);
        }
    }

    public static int uno(int num){
        if (num < 10){
            return 1;
        }else {
            return 1+uno(num/10);
        }
    }
    public static int dos(int base, int exponente){
        if (exponente == 1){
            return 0;
        }else {
            return base*dos(base,exponente-1);
        }
    }
    public static void tres(int num){
        if(num < 10){
            System.out.print(num + " ");
        }else{
            System.out.println(num%10);
            tres(num/10);
        }
    }
    public static void tre_dos(int pos, char[] frase){

        if (pos>=0){
            System.out.print(frase[pos] + " ");
            tre_dos(pos-1,frase);
        }

    }

    public static boolean cuatro(int numero) {
        if (numero >= 10) {
            if (numero % 10 == 1 || numero % 10 == 0) {
                return cuatro(numero / 10);
            } else {
                return false;
            }
        } else if (numero == 0 || numero == 1) {
            return true;
        } else {
            return false;
        }
    }

    public static String cinco(int num, String binario)  {

        if (num <= 1) {
            return Integer.toString(num);
        } else {
            return cinco(num / 2, binario) + num % 2;
        }
    }


//    public static boolean seis(char palabra){
//
//    }

    public static void siete(int num,int cont,int resultado){
        if (num > cont){
            System.out.print( cont + " + ");
            siete(num,cont+1,resultado+cont);
        }else {
            resultado += cont;
            System.out.print(cont + " = " + resultado);
            System.out.println("");
        }
    }
}
